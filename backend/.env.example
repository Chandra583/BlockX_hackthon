# Environment Configuration
NODE_ENV=production
PORT=3000
APP_NAME=VERIDRIVE
APP_VERSION=1.0.0

# Database - MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database_test>?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=<your-jwt-secret-key>
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=<your-jwt-refresh-secret>
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=1000
ACCOUNT_LOCKOUT_ATTEMPTS=10
ACCOUNT_LOCKOUT_DURATION=900000

# Email Configuration (Optional)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<your-smtp-user>
SMTP_PASS=<your-smtp-password>
EMAIL_FROM=noreply@veridrive.com

# Frontend URL
FRONTEND_URL=https://your-frontend.vercel.app
CORS_ORIGIN=https://your-frontend.vercel.app

# AWS S3 Configuration (Optional - for file uploads)
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_REGION=us-east-1
AWS_S3_BUCKET=<your-s3-bucket-name>

# Blockchain Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WALLET_PRIVATE_KEY=<your-solana-private-key>

# Arweave Configuration (Optional)
ARWEAVE_WALLET=<your-arweave-wallet>
ARWEAVE_NETWORK=mainnet

# Session Configuration
SESSION_SECRET=<your-session-secret>
SESSION_NAME=veridrive_session
SESSION_COOKIE_MAX_AGE=86400000

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<your-redis-password>
REDIS_TLS=false

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_BLOCKCHAIN_INTEGRATION=true
