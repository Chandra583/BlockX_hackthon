# BlockX Backend Environment Variables
# Colosseum Cyberpunk Hackathon Submission

NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/blockx
MONGODB_TEST_URI=mongodb://localhost:27017/blockx_test

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Blockchain - Solana
SOLANA_RPC_URL=https://api.devnet.solana.com

# AWS S3 (Optional for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=blockx-uploads

# Email (Optional)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-email
SMTP_PASS=your-password
EMAIL_FROM=noreply@blockx.com

# Admin Configuration
ADMIN_EMAIL=admin@blockx.com
ADMIN_PASSWORD=AdminPassword123!
